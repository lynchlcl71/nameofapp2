        <%= image_tag(product.image_url, class: "img-responsive") if product.image_url %>
        <h2><%= product.name %></h2>
        <p><%= product.description %></p>
        <strong><%= product.price %> â‚¬</strong><br>
        <td><%= link_to 'Show', product %></td>
